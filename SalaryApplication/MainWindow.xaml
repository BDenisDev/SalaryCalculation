<Window x:Class="SalaryApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryApplication"
        mc:Ignorable="d"
        Title="Меню" Height="220.901" Width="275.409" WindowStartupLocation="CenterScreen">
    <Grid Background="White" Margin="0,0,0,-45" Height="223" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160*"/>
            <ColumnDefinition Width="107*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btAddCompany" Content="Добавить компанию" HorizontalAlignment="Left" Margin="22,25,0,0" VerticalAlignment="Top" Width="216" Click="btAddCompany_Click" Height="33" Grid.ColumnSpan="2"/>
        <Button x:Name="btAddNewEmp" Content="Добавить сотрудника" HorizontalAlignment="Left" Margin="22,82,0,0" VerticalAlignment="Top" Width="216" Click="btAddNewEmp_Click" Height="33" Grid.ColumnSpan="2"/>
        <Button x:Name="btCalculateSalary" Content="Рассчитать зарплату" HorizontalAlignment="Left" Margin="22,135,0,0" VerticalAlignment="Top" Width="216" Click="btCalculateSalary_Click" Height="33" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
